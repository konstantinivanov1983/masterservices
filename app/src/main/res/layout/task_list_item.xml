<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <TextView
        fontPath="fonts/proximanoval.ttf"
        tools:ignore="MissingPrefix"
        android:id="@+id/list_item_amount"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="1500"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content">

    <TextView
        fontPath="fonts/RobotoCondensed-Regular.ttf"
        android:textSize="16sp"
        tools:ignore="MissingPrefix"
        android:id="@+id/list_item_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Работа, которую следует выполнить warshav"/>

    <TextView
        android:id="@+id/list_item_adress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_job"
        android:text="Адрес: Варшавскоен шоссе, 18, к.1, Москва, Warschavskoe"
        fontPath="fonts/robotocondensedlight.ttf"
        tools:ignore="MissingPrefix"
        />

    </LinearLayout>

</LinearLayout>