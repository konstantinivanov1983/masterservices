<!-- fragment_edit_name.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"  >

    <TextView
        android:text="Введите полученную сумму:"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/price_text_input_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >

    <EditText
        android:id="@+id/dialog_edit_text_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:imeOptions="actionDone" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:text="Введите комментарий:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/dialog_edit_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:imeOptions="actionDone"
        android:hint="@string/close_order_comment_hint"

        />

</LinearLayout>