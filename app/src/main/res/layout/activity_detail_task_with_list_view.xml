<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteWhite"
    android:orientation="vertical">

    <ListView
        android:id="@+id/detail_task_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:divider="@color/colorPrimary"
        android:dividerHeight="0.1sp"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/detail_task_refuse_order"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_task_list_view"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#03b363"
            android:drawablePadding="6dp"
            android:text="Не подходит" />

        <Button
            android:id="@+id/detail_task_take_order"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_task_list_view"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Взять заказ"
            android:textColor="@color/colorWhiteWhite" />


    </LinearLayout>

</LinearLayout>