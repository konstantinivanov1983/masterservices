<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tasks"
    android:background="#e1e0e0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    >

    <ProgressBar
        android:id="@+id/progress_bar_in_current_tasks"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list_view_current_tasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="4.0sp"/>
        />

    <RelativeLayout
        android:id="@+id/no_connnection_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/empty_view_image"
            android:src="@drawable/ic_update_36px"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="20dp"
            android:id="@+id/empty_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empty_view_image"
            android:layout_centerHorizontal="true"
            android:paddingTop="16dp"
            android:text="Отсутствует подключение к интернету"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearanceMedium"/>

    </RelativeLayout>

</RelativeLayout>